{% extends 'base.html.twig' %}

{% block title %}Список книг{% endblock %}

{% import ('components/bookPreview.html.twig') as bookPreview %}
{% import ('discover/components/sortList.html.twig') as sortList %}

{% block javascripts %}
    {{ parent() }}

    {{ encore_entry_link_tags('discover') }}
{% endblock javascripts %}

{% block body %}
    <div class="container-fluid">
        <div class="row flex-nowrap">
            {% include('discover/components/sidebar.html.twig') %}

            <div class="container col py-3">
                <div class="card p-4">
                    <div class="row">
                        <div style="float: right">
                            {{ sortList.render(books) }}
                        </div>
                    </div>
                    <div class="row py-3 px-2">
                        {% for book in books %}
                            <div class="col-lg-4 col-md-4 col-sm-6 pb-4">
                                {{ bookPreview.render(book) }}
                            </div>
                        {% endfor %}
                    </div>
                </div>

                <div class="pagination-block">
                    {{ pagerfanta(books) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}