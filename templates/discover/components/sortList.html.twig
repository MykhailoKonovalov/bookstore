{% macro render(books) %}
    <select class="form-select w-25" {{ stimulus_controller('discover') }}
            {{ stimulus_action('discover', 'redirectTo', 'change') }}>
        <option value="" selected disabled>Сортувати за...</option>
        <option value="{{ addParameterToCurrentQuery({'sortBy': 'p.createdAt'}) }}">За новинками</option>
        <option value="{{ addParameterToCurrentQuery({'sortBy': 'p.discountPercent'}) }}">За знижкою</option>
        <option value="{{ addParameterToCurrentQuery({'sortBy': 'p.discountPrice'}) }}">Від дорогих</option>
        <option value="{{ addParameterToCurrentQuery({'sortBy': 'p.discountPrice', 'sortDirection': 'ASC'}) }}">Від дешевих</option>
    </select>
{% endmacro %}