{% extends 'profile/basePage.html.twig' %}

{% set activePage = 1 %}

{% block title %}Мій профіль{% endblock %}

{% block pageContent %}
    <div class="card overflow-hidden p-4">
        <div class="row no-gutters row-bordered row-border-light">
            {{ form_errors(form) }}
            {{ form_start(form) }}
            <div class="form-outline mb-4">
                {{ form_label(form.name) }}
                {{ form_widget(form.name, { 'attr': { 'class': 'form-control' } }) }}
                <div class="control__help-text">{{ form_errors(form.name)|striptags|raw }}</div>
            </div>
            <div class="form-outline mb-4">
                {{ form_label(form.email) }}
                {{ form_widget(form.email, { 'attr': { 'class': 'form-control' } }) }}
                <div class="control__help-text">{{ form_errors(form.email)|striptags|raw }}</div>
            </div>
            <div class="form-outline mb-4">
                {{ form_label(form.phone) }}
                {{ form_widget(form.phone, { 'attr': { 'class': 'form-control' } }) }}
                <div class="control__help-text">{{ form_errors(form.phone)|striptags|raw }}</div>
            </div>
            <div class="text-right mt-3">
                <button type="submit" class="btn btn-primary">Save changes</button>
                <button type="button" class="btn btn-secondary" onclick="window.location.reload();">Cancel</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
