{% extends 'base.html.twig' %}

{% block title %}{{ book.title }}{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {{ encore_entry_script_tags('bookPage') }}
{% endblock %}

{% block body %}
    <div class="container-fluid p-4">
        <div class="card">
            <section class="py-5">
                <div class="container px-2 my-1">
                    <div class="row gx-4 gx-lg-5">
                        <div class="col-4">
                            <img class="card-img-top"
                                 src="{{ book.coverUrl }}" alt="{{ book.title }}">
                            <div class="container">
                                {% for product in book.products %}
                                    <div class="product-info {% if loop.index != 1 %}d-none{% endif %}"
                                         data-value="{{ product.type }}">
                                        {% if product.discountPercentage > 0 %}
                                            <span class="fw-bolder discount p-1">
                                                {{ product.discountPrice ~ ' грн' }}
                                            </span>
                                            <span class="fw-bolder crossed p-1">
                                                {{ product.price ~ ' грн' }}
                                            </span>
                                            <mark> -{{ product.discountPercentage }}%</mark>
                                        {% else %}
                                            <span class="fw-bolder p-1">
                                                {{ product.price ~ ' грн' }}
                                            </span>
                                        {% endif %}
                                        <div class="row">
                                            <span class="fw-bold">
                                                {% if product.type == 'paper' %}
                                                    Паперова книга -
                                                    {% if book.stockCount > 0 %}
                                                       <span class="text-success">У наявності</span>
                                                    {% else %}
                                                        <span class="text-muted">Немає в наявності</span>
                                                    {% endif %}
                                                {% elseif product.type == 'electronic' %}
                                                    Електронна книга -
                                                    <span class="text-info">
                                                        {{ product.formats|join(',') }}
                                                    </span>
                                                {% endif %}
                                            </span>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                            <div class="row my-3">
                                <div class="col-6">
                                    <button class="btn btn-success flex-shrink-0" type="button">
                                        <i class="fa fa-shopping-bag"></i>
                                        Додати в кошик
                                    </button>
                                </div>
                                <div class="col-6">
                                    <button class="btn btn-danger flex-shrink-0" type="button">
                                        <i class="fa fa-heart"></i>
                                        Додати в бажане
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="col-8">
                            <h1 class="display-5 fw-bolder">{{ book.title }}</h1>
                            <div class="small mb-1">{{ book.author }}</div>
                            <div class="container my-3">
                                {% for category in book.categories %}
                                    <span class="btn btn-outline-secondary">
                                        {{ category }}
                                    </span>
                                {% endfor %}
                            </div>
                            <div class="container my-3 mx-1">
                                <span class="fw-bold row">Формат</span>
                                {% for product in book.products %}
                                    <span {{ stimulus_controller('bookPage')}}
                                            data-action="click->bookPage#toggleActive" id="book-format"
                                            data-value="{{ product.type }}"
                                            class="btn btn-outline-secondary {% if loop.index == 1 %}active{% endif %}">
                                        {% if product.type == 'paper' %}
                                            <p><i class="fa fa-book"></i> Паперова</p>

                                        {% elseif product.type == 'electronic' %}
                                            <p><i class="fa fa-download "></i> Електронна</p>
                                        {% endif %}
                                        {{ product.discountPrice ?? product.price ~ ' грн' }}
                                    </span>
                                {% endfor %}
                            </div>
                            <p class="lead">{{ book.description }}</p>
                            <div class="container-fluid mt-4">
                                <h3>Характеристики</h3>
                                <div class="row">
                                    <div class="col-3 fw-bold">Мова</div>
                                    <div class="col-9">{{ book.language }}</div>
                                    <div class="col-3 fw-bold">Рік видання</div>
                                    <div class="col-9">{{ book.publishedYear }}</div>
                                    <div class="col-3 fw-bold">Видавництво</div>
                                    <div class="col-9">{{ book.publisher }}</div>
                                    <div class="col-3 fw-bold">Перекладач</div>
                                    <div class="col-9">{{ book.translator }}</div>
                                    <div class="col-3 fw-bold">Кількість сторінок</div>
                                    <div class="col-9">{{ book.pageCount }}</div>
                                    <div class="col-3 fw-bold">Ілюстрації</div>
                                    <div class="col-9">{{ book.illustration ? 'Присутні' : 'Немає' }}</div>
                                    <div class="col-3 fw-bold">Тип обкладинки</div>
                                    <div class="col-9">{{ book.isSoftCover ? "М'яка" : 'Тверда' }}</div>
                                    <div class="col-3 fw-bold">Розміри книги</div>
                                    <div class="col-9">{{ book.width ~ ' см. x ' ~ book.height ~ ' см.' }}</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
{% endblock %}
